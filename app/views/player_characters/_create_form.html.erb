<div class="form-group">
  <div class="field">
    <%= f.label :name, "キャラクター名" %><br />
    <%= f.text_field :name, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :ship_number, "Ship" %><br />
    <%= f.number_field :ship_number, in: 1..10, :class => "form-control" %>
  </div>  
</div>
<div class="actions">
  <p><%= f.submit :class => "btn btn-default" %></p>
</div>
